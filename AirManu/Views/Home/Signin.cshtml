@model Login

@{
    ViewData["Title"] = "Signin";
}

<div class="text-center">
    <h1 class="h3 laranja mb-3 font-weight-normal">Sign-up</h1>
    @if (ViewBag.checks)
    {
        <h1 class="h6 mb-3 font-weight-normal" style="color: green;">@ViewBag.mensagemSign</h1>
    }
    else
    {
        <h1 class="h6 mb-3 font-weight-normal" style="color: red;">@ViewBag.mensagemSign</h1>
    }
    <form class="form-signin" method="POST">
        <div class="form-group">
            <input asp-for="Email" type="email" class="form-control mb-1" required placeholder="EndereÃ§o de Email"/>
            <input asp-for="Senha" type="password" class="form-control" required placeholder="Senha"/>
        </div>
        <button type="submit" class="btn btn-lg btn-block meubotao">Cadastrar</button>
    </form>
    <a class="azul" asp-action="Login">Entrar na sua conta</a>
</div>