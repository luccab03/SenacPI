<!-- Importa a bibloteca -->
@using Microsoft.AspNetCore.Http;

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AirManu</title> <!-- Titulo váriavel por página + nome fixo -->
    <!-- Bootstrap e css -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<body>
    <!-- Header -->
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="laranja navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">AirManu</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <!-- Menu -->
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link azul menuzin" asp-area="" asp-controller="Home" asp-action="Index">Inicio</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link azul menuzin" asp-area="" asp-controller="Home" asp-action="Contato">Contato</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link azul menuzin" asp-area="" asp-controller="Home" asp-action="Precos">Preços</a>
                        </li>
                    </ul>
                </div>
                <!-- Fim do menu -->
                <!-- Login/Signup -->
                @if (Context.Session.GetInt32("Id") != null) // Verifica se a sessão tem algum id logado
                {
                    // Exibe o logout
                    <div class="d-sm-inline-flex">
                        <a id="login" class="nav-link azul" asp-area="" asp-controller="Home" asp-action="Logout">Logout</a>
                    </div>
                }
                else
                {
                    // Exibe ações de login/signin
                    <div class="d-sm-inline-flex">
                        <a id="login" class="nav-link azul" asp-area="" asp-controller="Home" asp-action="Login">Login</a>
                        <a id="sign" class="nav-link laranja" asp-area="" asp-controller="Home" asp-action="Signin">Sign-in</a>
                    </div>
                }
            </div>
        </nav>
    </header>
    <!-- Fim do Header -->
    <!-- Renderização da página -->
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - Projeto Integrador 1 - Lucca Bringhenti
        </div>
    </footer>
    <!-- Fim do Footer -->
    <!-- Importar jquery, bootstrap/js e js próprio -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>

</html>